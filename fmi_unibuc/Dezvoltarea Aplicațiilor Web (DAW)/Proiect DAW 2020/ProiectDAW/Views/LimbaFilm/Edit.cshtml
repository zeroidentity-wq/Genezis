@model ProiectDAW.Models.LimbaFilm
@{
    ViewBag.Title = "Editare Informații Limbă Film ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<br />
<br />
<h2 style="font-family: 'Adobe Devanagari';">@ViewBag.Title</h2>

@using (Html.BeginForm(actionName: "Edit", controllerName: "LimbaFilm", method: FormMethod.Post, htmlAttributes: new { style = "display:inline" }))
{
    @Html.HttpMethodOverride(HttpVerbs.Put)
    @Html.HiddenFor(f => f.LimbaId)


    @Html.Label("Nume", "Nume Film:")
    @Html.EditorFor(f => f.Nume, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(f => f.Nume, "", new { @class = "text-danger" })
    <br />

    <button class="btn btn-success" type="submit">Update</button>
}


@using (Html.BeginForm(actionName: "Index", controllerName: "LimbaFilm", method: FormMethod.Get, htmlAttributes: new { style = "display:inline; float: right" }))
{
    <button class="btn btn-primary">Înapoi</button>
}