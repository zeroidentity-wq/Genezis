@model ProiectDAW.Models.Film
@{
    ViewBag.Title = "Editare Informații Film ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<br />
<br />
<h2 style="font-family: 'Adobe Devanagari';">@ViewBag.Title: @Model.Nume</h2>

@using (Html.BeginForm(actionName: "Edit", controllerName: "Film", method: FormMethod.Post, htmlAttributes: new { style = "display:inline" }))
{
    @Html.HttpMethodOverride(HttpVerbs.Put)
    @Html.HiddenFor(f => f.FilmId)


    @Html.Label("Nume", "Nume Film:")
    @Html.EditorFor(f => f.Nume, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(f => f.Nume, "", new { @class = "text-danger" })
    <br />

    @Html.Label("An", "An Apariție:")
    @Html.EditorFor(f => f.An, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(f => f.An, "", new { @class = "text-danger" })
    <br />

    @Html.Label("Descriere", "Descriere:")
    @Html.TextAreaFor(f => f.Descriere, new { @class = "form-control", @rows = "10" })
    @Html.ValidationMessageFor(f => f.Descriere, "", new { @class = "text-danger" })
    <br />

    @Html.Label("NrPremii", "Număr Premii:")
    @Html.EditorFor(f => f.NrPremii, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(f => f.NrPremii, "", new { @class = "text-danger" })

    @Html.Label("Director", "Director: ")
    @Html.DropDownListFor(f => f.DirectorId, new SelectList(Model.DirectorList, "Value", "Text"), "Alege un Director", new { @class = "form-control" })
    @Html.ValidationMessageFor(f => f.DirectorId, "", new { @class = "text-danger" })
    <br />

    @Html.Label("Limba", "Limbă Film: ")
    @Html.DropDownListFor(f => f.LimbaId, new SelectList(Model.LimbaFilmList, "Value", "Text"), "Alege o Limbă", new { @class = "form-control" })
    @Html.ValidationMessageFor(f => f.LimbaId, "", new { @class = "text-danger" })
    <br />

    @Html.LabelFor(f => f.GenFilmList, "Alege Genurile Filmului: ")
    <br />
    for (int i = 0; i < Model.GenFilmList.Count(); i++)
    {
        @Html.HiddenFor(f => f.GenFilmList[i].Id)
        @Html.HiddenFor(f => f.GenFilmList[i].Nume)
        @Html.CheckBoxFor(f => f.GenFilmList[i].Checked)
        @Html.DisplayFor(f => f.GenFilmList[i].Nume)
        <br />
    }
    <br />

    <button class="btn btn-success" type="submit">Update</button>
}


@using (Html.BeginForm(actionName: "Index", controllerName: "Film", method: FormMethod.Get, htmlAttributes: new { style = "display:inline; float: right" }))
{
    <button class="btn btn-primary">Înapoi</button>
}